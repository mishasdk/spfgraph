<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="LatoLight">pack://appliction;,,,/Fonts/#Lato Light</FontFamily>
    <FontFamily x:Key="LatoRegular">pack://appliction;,,,/Fonts/#Lato Regular</FontFamily>
    <FontFamily x:Key="LatoBold">pack://appliction;,,,/Fonts/#Lato Bold</FontFamily>

    <Style TargetType="{x:Type Control}" x:Key="BaseControl">
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseControl}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseControl}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseControl}"/>
    <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource BaseControl}"/>

</ResourceDictionary>